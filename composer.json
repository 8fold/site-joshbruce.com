{
  "name": "8fold/site-joshbruce.com",
  "description": "The site and content for joshbruce.com",
  "type": "website",
  "license": "proprietary",
  "authors": [
    {
      "name": "Josh Bruce",
      "email": "josh@8fold.pro"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-fileinfo": "*",
    "8fold/commonmark-fluent-markdown": "^0.10.0",
    "8fold/php-html-builder": "^0.5.3",
    "filp/whoops": "^2.14",
    "laminas/laminas-httphandlerrunner": "^2.1",
    "league/flysystem": "^2.3",
    "nesbot/carbon": "^2.53",
    "nyholm/psr7": "^1.4",
    "nyholm/psr7-server": "^1.0",
    "symfony/console": "^5.3",
    "symfony/finder": "^5.3",
    "vlucas/phpdotenv": "^5.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "pestphp/pest": "^1.20",
    "phpstan/phpstan": "^1.0.0"
  },
  "autoload": {
    "psr-4": {
      "JoshBruce\\Site\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JoshBruce\\Site\\Tests\\": "./tests"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "sort-packages": true,
  "prefer-stable": true,
  "scripts": {
    "prod": "@production",
    "production": [
      "@style",
      "@stan",
      "@test"
    ],
    "style": "./vendor/bin/phpcs --standard=phpcs.xml -p ./src",
    "stan": "./vendor/bin/phpstan analyze",
    "test": "./vendor/bin/pest"
  }
}
