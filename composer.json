{
  "name": "joshbruce/site",
  "description": "Part dynamic site and part static site generator.",
  "type": "library",
  "require": {
    "php": "^8.0",
    "ext-fileinfo": "*",
    "vlucas/phpdotenv": "^5.3",
    "8fold/commonmark-fluent-markdown": "^0.10.0",
    "8fold/php-html-builder": "^0.5.3",
    "nyholm/psr7": "^1.4",
    "laminas/laminas-httphandlerrunner": "^2.1",
    "filp/whoops": "^2.14",
    "nesbot/carbon": "^2.53",
    "symfony/finder": "^5.3",
    "league/flysystem": "^2.3",
    "symfony/console": "^5.3"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "phpstan/phpstan": "^0.12",
    "pestphp/pest": "^1.20"
  },
  "license": "MIT",
  "authors": [
      {
          "name": "Josh Bruce",
          "email": "josh@8fold.pro"
      }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "JoshBruce\\Site\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "prod": "@production",
    "production": [
      "@style",
      "@stan",
      "@test"
    ],
    "style": "./vendor/bin/phpcs --standard=phpcs.xml -p ./src",
    "stan": "./vendor/bin/phpstan analyze",
    "test": "./vendor/bin/pest"
  }
}
